{
  "framework": "mocha",
  "src_files": [
    "*.js",
    "modules/*.js",
    "client/*.js",
    "server/*.js",
    "test/*.js"
  ],
  "serve_files": [
    "test.js~out"
  ],
  "browser_args": {
    "chromium": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  },
  "before_tests": "npm run compile-test",
  "on_exit": "npm run clean-test",
  "launch_in_ci": [ "firefox", "chromium" ],
  "launch_in_dev": [ "firefox", "chromium" ],
  "ignore_missing_launchers": true
}
