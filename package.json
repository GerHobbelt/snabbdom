{
  "name": "snabbdom-ng",
  "version": "0.7.3-ng.2",
  "description": "A virtual DOM library with focus on simplicity, modularity, powerful features and performance.",
  "main": "index.js",
  "module": "es/index.js",
  "typings": "index.d.ts",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "dependencies": {},
  "devDependencies": {
    "benchmark": "^2",
    "browserify": "^16",
    "fake-raf": "^1",
    "gulp": "^3",
    "gulp-clean": "^0",
    "gulp-rename": "^1",
    "gulp-sourcemaps": "^2",
    "gulp-uglify": "^3",
    "knuth-shuffle": "^1",
    "testem": "^2",
    "typescript": "^3.2.2",
    "xyz": "^3"
  },
  "scripts": {
    "pretest": "npm run compile",
    "test": "testem ci",
    "test-dev": "testem",
    "compile-test": "browserify -d test/index.js -o test.js~out",
    "clean-test": "rm -f test.js~out",
    "compile": "npm run compile-es && npm run compile-commonjs",
    "compile-es": "tsc --outDir es --module es6 --moduleResolution node",
    "compile-commonjs": "tsc --outDir ./",
    "clean": "npm run clean-es && npm run clean-commonjs",
    "clean-es": "rm -rf es",
    "clean-commonjs": "rm -rf modules helpers html *.d.ts *.map hooks.js module.js vnode.js h.js thunk.js index.js html.js snabbdom.js snabbdom.bundle.js",
    "prepare": "npm run compile",
    "bundle": "gulp compress",
    "release-major": "xyz --repo git@github.com:paldepind/snabbdom.git --increment major",
    "release-minor": "xyz --repo git@github.com:paldepind/snabbdom.git --increment minor",
    "release-patch": "xyz --repo git@github.com:paldepind/snabbdom.git --increment patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paldepind/snabbdom.git"
  },
  "keywords": [
    "virtual",
    "dom",
    "light",
    "kiss",
    "performance"
  ],
  "author": "Simon Friis Vindum",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/katyo/snabbdom/issues"
  },
  "homepage": "https://github.com/katyo/snabbdom/tree/nextgen#changes-and-improvements"
}
